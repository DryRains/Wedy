<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="207dp">

        <ImageView
            android:id="@+id/imageview2"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="177dp"
            android:layout_height="146dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumsquare"
            android:gravity="bottom"
            android:paddingLeft="55dp"
            android:text="XX'C"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="152dp"
            android:layout_height="142dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:paddingBottom="1dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumsquare"
            android:gravity="bottom"
            android:text="맑음"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:text="어제보다 X'C 높아요"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="top"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumpen"
            android:gravity="center"
            android:outlineSpotShadowColor="@color/black"
            android:shadowColor="#424040"
            android:shadowDx="7.0"
            android:shadowDy="7.0"
            android:shadowRadius="7.0"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/Character"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleType="fitXY"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_gravity="bottom"
        >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="82dp"
            android:layout_height="76dp"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:background="#00000000"
            app:srcCompat="@drawable/btncloth" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="82dp"
            android:layout_height="76dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:background="#00000000"
            app:srcCompat="@drawable/btncd" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/nanumsquare"
            android:textColor="@color/white"
            android:textSize="13dp"

            android:text="            옷 추천                                                     노래 추천" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp" />

    </FrameLayout>

</LinearLayout>

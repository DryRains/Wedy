<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="677dp"
    android:background="@drawable/recommentclothbgr"
    android:orientation="vertical"
    tools:context=".Recommend_DailyLook">

    <TextView
        android:id="@+id/textWeatherInfo"
        android:layout_width="157dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_marginRight="32dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanumpen"
        android:gravity="bottom"
        android:text="현재 기온: X°C (흐림)"

        android:textSize="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="552dp">

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="326dp"
            android:layout_height="433dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:tag="Image" />

        <TextView
            android:id="@+id/textMain"
            android:layout_width="321dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="42dp"
            android:layout_marginBottom="55dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumpen"
            android:text="쌀쌀한 날씨, 이 옷은 어때요?"
            android:textSize="25dp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/imageButtonOuter"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/btnouter" />

        <ImageButton
            android:id="@+id/imageButtonTop"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/btntop" />

        <ImageButton
            android:id="@+id/imageButtonBottom"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="305dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/btnbottom" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="52dp"
            android:textSize="15dp"
            android:fontFamily="@font/nanumpen"
            android:text="아우터 쇼핑                     상의 쇼핑                   하의 쇼핑" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonRecall"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="148dp"
            android:layout_marginBottom="23dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/btncody" />

        <TextView
            android:id="@+id/textNextcody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/nanumsquare"
            android:text="다른 코디"
            android:textSize="12dp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/charactercloth"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:scaleType="fitXY"/>

    </FrameLayout>

</LinearLayout>